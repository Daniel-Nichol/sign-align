<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Align" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="246*" />
            <ColumnDefinition Width="257*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="152*" />
            <RowDefinition Height="159*" />
        </Grid.RowDefinitions>
        <Button Content="Button" Height="152" HorizontalAlignment="Left" Name="button1" VerticalAlignment="Top" Width="246" Click="Btn_Click" />
        <Button Height="78" HorizontalAlignment="Left" Margin="245,0,0,0" Name="button2" VerticalAlignment="Top" Width="258" Grid.ColumnSpan="2" Content="Initialize Recorder" Click="button2_Click_1" />
        <Button Content="Start" Height="75" HorizontalAlignment="Left" Margin="245,77,0,0" Name="button3" VerticalAlignment="Top" Width="132" Grid.ColumnSpan="2" />
        <Button Content="Stop" Height="75" HorizontalAlignment="Left" Margin="130,77,0,0" Name="button4" VerticalAlignment="Top" Width="127" Grid.Column="1" Click="button4_Click" />
        <Button Content="Save Recordings" Grid.ColumnSpan="2" Height="78" HorizontalAlignment="Left" Margin="245,0,0,0" Name="button5" VerticalAlignment="Top" Width="258" Grid.Row="1" />
    </Grid>
</Window>
